{
  "title": "User Registration",
  "type": "object",
  "properties": {
    "header": {
      "widget": "label",
      "text": "Please fill in your registration details"
    },
    "username": {
      "type": "string",
      "title": "Username"
    },
    "password": {
      "type": "string",
      "title": "Password"
    },
    "bio": {
      "widget": "textarea",
      "title": "Short Bio"
    },
    "age": {
      "type": "integer",
      "title": "Age",
      "minimum": 13,
      "maximum": 100
    },
    "height": {
      "type": "number",
      "title": "Height (cm)",
      "minimum": 50,
      "maximum": 250,
      "step": 0.5
    },
    "gender": {
      "type": "string",
      "title": "Gender",
      "enum": ["Male", "Female", "Other"]
    },
    "newsletter": {
      "type": "boolean",
      "title": "Subscribe to newsletter"
    },
    "contact_method": {
      "type": "string",
      "title": "Preferred Contact",
      "widget": "radio",
      "enum": ["Email", "Phone", "None"]
    },
    "submit": {
      "widget": "button",
      "text": "Register",
      "callback": "on_submit"
    },
    "cancel": {
      "widget": "button",
      "text": "Cancel",
      "callback": "on_cancel"
    }
  }
}
