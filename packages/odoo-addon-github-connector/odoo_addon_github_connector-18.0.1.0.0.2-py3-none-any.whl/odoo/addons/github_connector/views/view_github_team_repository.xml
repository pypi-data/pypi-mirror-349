<odoo>
    <record id="view_github_team_repository_search" model="ir.ui.view">
        <field name="model">github.team.repository</field>
        <field name="arch" type="xml">
            <search>
                <field name="team_id" />
                <field name="repository_id" />
                <field name="permission" />
            </search>
        </field>
    </record>
    <record id="view_github_team_repository_tree" model="ir.ui.view">
        <field name="model">github.team.repository</field>
        <field name="arch" type="xml">
            <list
                decoration-warning="permission == 'admin'"
                decoration-info="permission == 'read'"
            >
                <field name="team_id" invisible="context_search_default_team_id!=0" />
                <field
                    name="repository_id"
                    invisible="context_search_default_repository_id!=0"
                />
                <field name="permission" />
                <field name="context_search_default_team_id" invisible="1" />
                <field name="context_search_default_repository_id" invisible="1" />
            </list>
        </field>
    </record>
    <record id="view_github_team_permission_form" model="ir.ui.view">
        <field name="model">github.team.repository</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box" />
                    <div class="oe_title">
                        <h1>
                            <field name="team_id" />
                        </h1>
                        <h2>
                            <field name="repository_id" />
                        </h2>
                    </div>
                    <field name="permission" />
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_github_team_repository_from_team_kanban" model="ir.ui.view">
        <field name="model">github.team.repository</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="repository_id" />
                <field name="permission" />
                <templates>
                    <t t-name="card" class="flex-row">
                        <main class="ps-2 ps-md-0">
                            <div class="oe_module_desc">
                                <h3>
                                    <field name="repository_id" />
                                </h3>
                                <t t-if="record.permission.raw_value == 'undefined'">
                                    <span class="badge">
                                        <i
                                            class="fa fa-fw fa-question"
                                            aria-label="Permission"
                                            title="Permission"
                                        />
                                        <field name="permission" />
                                    </span>
                                </t>
                                <t t-if="record.permission.raw_value == 'read'">
                                    <span class="badge">
                                        <i
                                            class="fa fa-fw fa-file-o"
                                            aria-label="Permission"
                                            title="Permission"
                                        />
                                        <field name="permission" />
                                    </span>
                                </t>
                                <t t-if="record.permission.raw_value == 'write'">
                                    <span class="badge">
                                        <i
                                            class="fa fa-fw fa-save"
                                            aria-label="Permission"
                                            title="Permission"
                                        />
                                        <field name="permission" />
                                    </span>
                                </t>
                                <t t-if="record.permission.raw_value == 'admin'">
                                    <span class="badge">
                                        <i
                                            class="fa fa-fw fa-cog"
                                            aria-label="Permission"
                                            title="Permission"
                                        />
                                        <field name="permission" />
                                    </span>
                                </t>
                            </div>
                        </main>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="view_github_team_repository_from_repository_kanban" model="ir.ui.view">
        <field name="model">github.team.repository</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="team_id" />
                <field name="permission" />
                <templates>
                    <t t-name="card" class="flex-row">
                        <main class="ps-2 ps-md-0">
                            <div class="oe_module_desc">
                                <h3>
                                    <field name="team_id" />
                                </h3>
                                <t t-if="record.permission.raw_value == 'undefined'">
                                    <span class="badge">
                                        <i
                                            class="fa fa-fw fa-question"
                                            aria-label="Permission"
                                            title="Permission"
                                        />
                                        <field name="permission" />
                                    </span>
                                </t>
                                <t t-if="record.permission.raw_value == 'read'">
                                    <span class="badge">
                                        <i
                                            class="fa fa-fw fa-file-o"
                                            aria-label="Permission"
                                            title="Permission"
                                        />
                                        <field name="permission" />
                                    </span>
                                </t>
                                <t t-if="record.permission.raw_value == 'write'">
                                    <span class="badge">
                                        <i
                                            class="fa fa-fw fa-save"
                                            aria-label="Permission"
                                            title="Permission"
                                        />
                                        <field name="permission" />
                                    </span>
                                </t>
                                <t t-if="record.permission.raw_value == 'admin'">
                                    <span class="badge">
                                        <i
                                            class="fa fa-fw fa-cog"
                                            aria-label="Permission"
                                            title="Permission"
                                        />
                                        <field name="permission" />
                                    </span>
                                </t>
                            </div>
                        </main>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
