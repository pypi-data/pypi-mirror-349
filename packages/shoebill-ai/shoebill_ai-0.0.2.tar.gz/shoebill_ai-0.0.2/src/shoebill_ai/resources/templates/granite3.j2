{# ------ Template for Granite3.3 ------ #}
{# ------ MESSAGE PARSING ------ #}

{# Declare the prompt structure variables to be filled in from messages #}
{% set system = "" %}
{% set documents = "" %}
{% set documentCounter = 0 %}
{% set thinking = false %}
{% set citations = false %}
{% set hallucinations = false %}
{% set length = "" %}
{% set originality = "" %}

{# Loop over messages and look for a user-provided system message and documents #}
{% for message in Messages %}
    {# User defined system prompt(s) #}
    {% if message.Role == "system" %}
        {% if system %}
            {% set system = system + "\n\n" %}
        {% endif %}
        {% set system = system + message.Content %}
    {% endif %}

    {# Role specified controls #}
    {% if message.Role|length >= 7 and message.Role[:7] == "control" %}
        {% if message.Content == "thinking" %}
            {% set thinking = true %}
        {% endif %}
        {% if message.Content == "citations" %}
            {% set citations = true %}
        {% endif %}
        {% if message.Content == "hallucinations" %}
            {% set hallucinations = true %}
        {% endif %}
        {% if message.Content|length >= 7 and message.Content[:7] == "length " %}
            {% set length = message.Content[7:] %}
        {% endif %}
        {% if message.Content|length >= 12 and message.Content[:12] == "originality " %}
            {% set originality = message.Content[12:] %}
        {% endif %}
    {% endif %}

    {# Role specified document #}
    {% if message.Role|length >= 8 and message.Role[:8] == "document" %}
        {% if documentCounter %}
            {% set documents = documents + "\n\n" %}
        {% endif %}
        {% set identifier = "" %}
        {% if message.Role|length >= 9 %}
            {% set identifier = message.Role[9:] %}
        {% endif %}
        {% if not identifier %}
            {% set identifier = documentCounter %}
        {% endif %}
        {% set documents = documents + '<|start_of_role|>document {"document_id": "' + identifier + '"}<|end_of_role|>\n' + message.Content + '<|end_of_text|>' %}
        {% set documentCounter = documentCounter + 1 %}
    {% endif %}
{% endfor %}

{# If no user message provided, build the default system message #}
{% if not system %}
    {% set system = "Knowledge Cutoff Date: April 2024.\nYou are Granite, developed by IBM." %}

    {# Add Tools prompt #}
    {% if Tools %}
        {% set system = system + " You are a helpful assistant with access to the following tools. When a tool is required to answer the user's query, respond only with <|tool_call|> followed by a JSON list of tools used. If a tool does not exist in the provided list of tools, notify the user that you do not have the ability to fulfill the request." %}
    {% endif %}

    {# Add documents prompt #}
    {% if documents %}
        {% if Tools %}
            {% set system = system + "\n" %}
        {% else %}
            {% set system = system + " " %}
        {% endif %}
        {% set system = system + "Write the response to the user's input by strictly aligning with the facts in the provided documents. If the information needed to answer the question is not available in the documents, inform the user that the question cannot be answered based on the available data." %}
        {% if citations %}
            {% set system = system + "\nUse the symbols <|start_of_cite|> and <|end_of_cite|> to indicate when a fact comes from a document in the search result, e.g <|start_of_cite|> {document_id: 1}my fact <|end_of_cite|> for a fact from document 1. Afterwards, list all the citations with their corresponding documents in an ordered list." %}
        {% endif %}
        {% if hallucinations %}
            {% set system = system + "\nFinally, after the response is written, include a numbered list of sentences from the response with a corresponding risk value that are hallucinated and not based in the documents." %}
        {% endif %}
    {% endif %}

    {# Prompt without tools or documents #}
    {% if not Tools and not documents %}
        {% set system = system + " You are a helpful AI assistant." %}
        {% if thinking %}
            {% set system = system + "\nRespond to every user query in a comprehensive and detailed way. You can write down your thoughts and reasoning process before responding. In the thought process, engage in a comprehensive cycle of analysis, summarization, exploration, reassessment, reflection, backtracing, and iteration to develop well-considered thinking process. In the response section, based on various attempts, explorations, and reflections from the thoughts section, systematically present the final solution that you deem correct. The response should summarize the thought process. Write your thoughts between <think></think> and write your response between <response></response> for each user query." %}
        {% endif %}
    {% endif %}
{% endif %}

{# ------ TEMPLATE EXPANSION ------ #}

{# System Prompt #}
<|start_of_role|>system<|end_of_role|>{{ system }}<|end_of_text|>

{# Tools #}
{% if Tools %}
<|start_of_role|>available_tools<|end_of_role|>[
{% for index, tool in Tools %}
{{ tool }}
{% if index < Tools|length - 1 %},{% endif %}
{% endfor %}
]<|end_of_text|>
{% endif %}

{# Documents #}
{% if documents %}
{{ documents }}
{% endif %}

{# Standard Messages #}
{% for index, message in Messages %}
{% if message.Role != "system" and (message.Role|length < 7 or message.Role[:7] != "control") and (message.Role|length < 8 or message.Role[:8] != "document") %}
<|start_of_role|>
{% if message.Role == "tool" %}tool_response
{% else %}{{ message.Role }}
{% endif %}<|end_of_role|>
{% if message.Content %}{{ message.Content }}
{% elif message.ToolCalls %}<|tool_call|>
{% for call in message.ToolCalls %}{"name": "{{ call.Function.Name }}", "arguments": {{ call.Function.Arguments }}}
{% endfor %}
{% endif %}
{% if index == Messages|length - 1 %}
{% if message.Role != "assistant" %}<|end_of_text|>
<|start_of_role|>assistant
{% if length and originality %}{"length": "{{ length }}", "originality": "{{ originality }}"}
{% elif length %}{"length": "{{ length }}"}
{% elif originality %}{"originality": "{{ originality }}"}
{% endif %}<|end_of_role|>
{% else %}<|end_of_text|>
{% endif %}
{% else %}<|end_of_text|>
{% endif %}
{% endif %}
{% endfor %}