[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[project]
name = "{{ project_slug }}"
version = "{{ project_version | default('0.1.0') }}"
description = "A FastAPI project generated by create-uv-project."
readme = "README.md"
requires-python = ">=3.8"
license = {text = "MIT"}
authors = [
    { name = "{{ author_name }}", email = "{{ author_email }}" },
]
dependencies = [
    "fastapi>=0.100.0",
    "uvicorn[standard]>=0.23.0",
    "pydantic>=2.0.0",
    # Add other core dependencies here
]

[project.optional-dependencies]
dev = [
    "black>=23.0",
    "ruff>=0.1",
    "httpx>=0.24.0", # For async testing client
]
test = [
    "pytest>=7.0",
    "pytest-cov>=4.0",
    "httpx>=0.24.0", # For async testing client
]

[project.scripts]
dev = "{{ project_slug }}.main:run_dev"
# You can add other scripts here, e.g., for production server start

[tool.pytest.ini_options]
pythonpath = ["src"]
testpaths = ["tests"]
addopts = "-ra -q --cov={{ project_slug }} --cov-report=html --cov-report=term"
# asyncio_mode = "auto" # For pytest-asyncio if needed, httpx client handles it mostly

[tool.black]
line-length = 88
target-version = ['py38']
include = '\\\\.pyi?$'
exclude = '''
/(
    \\.eggs
  | \\.git
  | \\.hg
  | \\.mypy_cache
  | \\.tox
  | \\.venv
  | _build
  | buck-out
  | build
  | dist
)/
'''

[tool.ruff]
line-length = 88
target-version = "py38"
select = ["E", "F", "W", "I", "UP", "C4", "B", "A", "RUF"] # Add more as needed
ignore = []

[tool.ruff.per-file-ignores]
"__init__.py" = ["F401"]
"tests/*" = ["S101"] # Allow asserts in tests

[tool.ruff.isort]
known-first-party = ["{{ project_slug }}"]

[tool.hatch.metadata]
allow-direct-references = true 