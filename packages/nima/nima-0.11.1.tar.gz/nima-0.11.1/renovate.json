{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        ":dependencyDashboard"
    ],
    "prHourlyLimit": 0,
    "prConcurrentLimit": 0,
    "prFooter": " (#{{prNumber}})",
    "automerge": false,
    "rangeStrategy": "bump",
    "commitMessagePrefix": "build(deps):",
    "commitMessageAction": "bump",
    "commitMessageTopic": "{{depName}}",
    "commitMessageExtra": "from {{currentVersion}} to {{newVersion}}",
    "labels": [
        "dependencies"
    ],
    "pre-commit": {
        "enabled": true,
        "fileMatch": [
            "^\\.pre-commit-config\\.yaml$"
        ],
        "commitMessagePrefix": "build(hooks):",
        "groupName": "pre-commit hooks"
    },
    "packageRules": [
        {
            "matchPackageNames": [
                "sphinx"
            ],
            "allowedVersions": "<8.2",
            "rangeStrategy": "update-lockfile",
            "enabled": false
        },
        {
            "matchPackageNames": [
                "sphinx-autodoc-typehints"
            ],
            "allowedVersions": "<3.2",
            "rangeStrategy": "update-lockfile",
            "enabled": false
        },
        {
            "matchDepTypes": [
                "project.optional-dependencies"
            ],
            "matchPackageNames": [
                "commitizen",
                "mdformat",
                "mdformat-gfm",
                "pre-commit",
                "pylsp-mypy",
                "ruff",
                "ruff-lsp"
            ],
            "groupName": "dev dependencies",
            "labels": [
                "dependencies",
                "dev"
            ],
            "commitMessagePrefix": "build(dev):"
        },
        {
            "matchDepTypes": [
                "project.optional-dependencies"
            ],
            "matchPackageNames": [
                "autodocsumm",
                "bokeh",
                "dask-image",
                "holoviews",
                "hvplot",
                "impy-array",
                "ipykernel",
                "jupyter",
                "nbsphinx",
                "pydata-sphinx-theme",
                "pygments",
                "pympler",
                "seaborn",
                "selenium",
                "sphinx-autodoc-typehints",
                "sphinx-click",
                "sphinx",
                "statsmodels"
            ],
            "groupName": "docs dependencies",
            "labels": [
                "dependencies",
                "docs"
            ],
            "commitMessagePrefix": "build(docs):"
        },
        {
            "matchDepTypes": [
                "project.optional-dependencies"
            ],
            "matchPackageNames": [
                "coverage",
                "mypy",
                "pandas-stubs",
                "pygments",
                "pypdf",
                "pytest",
                "xdoctest"
            ],
            "groupName": "test dependencies",
            "labels": [
                "dependencies",
                "tests"
            ],
            "commitMessagePrefix": "build(tests):"
        },
        {
            "matchManagers": [
                "pre-commit"
            ],
            "labels": [
                "dependencies",
                "pre-commit"
            ],
            "commitMessagePrefix": "build(hooks):"
        },
        {
            "matchFiles": [
                "pyproject.toml"
            ],
            "matchDepNames": [
                "python"
            ],
            "enabled": false
        }
    ]
}
