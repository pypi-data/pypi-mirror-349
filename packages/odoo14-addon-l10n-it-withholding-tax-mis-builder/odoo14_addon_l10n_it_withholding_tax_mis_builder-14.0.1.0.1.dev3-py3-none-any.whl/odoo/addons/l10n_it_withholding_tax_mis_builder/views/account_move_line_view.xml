<odoo>
    <record id="view_move_line_tree_grouped" model="ir.ui.view">
        <field
            name="name"
        >Add withholding amounts to account move line grouped tree view</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree_grouped" />
        <field name="arch" type="xml">
            <field name="credit" position="after">
                <field
                    name="withholding_tax_debit"
                    optional="hide"
                    sum="Total Debit without Withholding Tax"
                />
                <field
                    name="withholding_tax_credit"
                    optional="hide"
                    sum="Total Credit without Withholding Tax"
                />
            </field>
        </field>
    </record>
</odoo>
