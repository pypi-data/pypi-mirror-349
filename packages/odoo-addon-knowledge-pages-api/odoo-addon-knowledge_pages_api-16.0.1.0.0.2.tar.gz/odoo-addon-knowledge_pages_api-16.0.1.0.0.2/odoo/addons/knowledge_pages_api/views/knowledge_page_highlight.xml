<odoo>

    <record id="view_knowledge_page_highlight_form" model="ir.ui.view">
        <field name="name">knowledge.page.highlight.form</field>
        <field name="model">knowledge.page.highlight</field>
        <field name="arch" type="xml">
            <form string="Tag">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-check">
                            <field name="active" widget="boolean_button" options="{&quot;terminology&quot;: &quot;active&quot;}" />
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" required="1"/>
                        </h1>
                    </div>
                    <group name="main">
                        <field name="code" />
                        <field name="color" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_knowledge_page_highlight_tree" model="ir.ui.view">
        <field name="name">knowledge.page.highlight.tree</field>
        <field name="model">knowledge.page.highlight</field>
        <field name="arch" type="xml">
            <tree string="Document Tags">
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="knowledge_page_highlight_action" model="ir.actions.act_window">
        <field name="name">Highlights</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">knowledge.page.highlight</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem 
        id="knowledge_page_highlight_menu" 
        name="Highlights" 
        parent="document_knowledge.menu_document_configuration" 
        action="knowledge_page_highlight_action" 
        sequence="46" />

</odoo>
