<CodeSnippetLayout>:
    size_hint: 1, None
    inset_width: 0
    inset_color: app.transparent
    bg_color: app.layer_01
    hover_color: app.layer_hover_01
    line_color_focus: app.focus
    padding: [dp(16), dp(16), dp(16), dp(16)]

<CodeSnippet>:
    id: codesnippet_input
    background_normal: ""
    background_active: ""
    style_name: "colorful"
    readonly: True
    size_hint: 1, None
    height: self.minimum_height
    font_size: plex_14
    padding: [dp(16), dp(16), dp(16), dp(16)]
    pos_hint: {'center_x': 0.5,'center_y': 0.5}

<CodeSnippetCopyButton>:
    icon: "copy"
    text_color: app.text_primary
    font_size: plex_12
    spacing: 0
    pos: [self.parent.width - (self.width + dp(8)), self.parent.height - (self.height + dp(8))]
    on_press:
        self.parent.on_copy(self.parent.codesnippet_area.text)
